server {
	server_name ngokevin.com;
	root /home/ngoke/Code/ngokevin/_output;
	index index.html;

    location ~ ^/~(.+?)(/.*)?$ {
        alias /home/$1/public_html$2;
        index  index.html index.htm;
        autoindex on;
    }

    rewrite /rss/index.xml /rss;
}

